@model LoginComponentViewModel

@if (Model.IsSignedIn)
{
    <li class="nav-item avatar dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-55" data-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
            @if (Model.User.Avatar == null)
            {
                <img src="~/img/Avatars/User_Avatar-512.webp" class="rounded-circle z-depth-0"
                     alt="avatar image" height="40">
            }
            else
            {
                <img src="@Url.Action("GetAvatar", "Account")" class="rounded-circle z-depth-0"
                     alt="avatar image" height="50">
            }
        </a>
        <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary colordark colorlightbg" 
             aria-labelledby="navbarDropdownMenuLink-55">
            <a class="dropdown-item" asp-controller="Account" asp-action="MyAccount" asp-route-view="Profile">Profile</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="MyAccount" asp-route-view="Rated movies">Rated movies</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="MyAccount" asp-route-view="Wishlist">Wishlist</a>
            <a class="dropdown-item" id="logoutLink" asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
    </li>
}
else
{
    <li>
        <a class="museofont btn btn-info mr-sm-2" id="loginLink" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
