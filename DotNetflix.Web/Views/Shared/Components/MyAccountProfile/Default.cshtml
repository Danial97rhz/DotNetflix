@using DotNetflix.Web.Auth
@model ApplicationUser

    <div>
        <h3 class="text-info d-inline">Profile</h3>
        <a class="text-info d-inline" 
           asp-controller="Account" 
           asp-action="EditUser"
           asp-route-id="@Model.Id">[Edit]</a>
    </div>

<table class="table table-borderless myAccountTable table-sm"
       style="table-layout: fixed">
    <tr>
        <td style="width: 130px">
            Email</td>
        <td>@Model.Email</td>
    </tr>
    <tr class="py-0">
        <td>Username</td>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <td>Birtdate</td>
        <td>@Model.Birthdate.ToShortDateString()</td>
    </tr>
    <tr>
        <td>City</td>
        <td>@Model.City</td>
    </tr>
    <tr>
        <td>Country</td>
        <td>@Model.Country</td>
    </tr>
</table>
