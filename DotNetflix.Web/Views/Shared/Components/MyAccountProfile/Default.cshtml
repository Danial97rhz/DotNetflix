@using DotNetflix.Web.Auth
@model ApplicationUser

<h3 class="text-danger">User details</h3>
    <table class="table table-borderless myAccountTable table-sm">
        <tr>
            <td>Email</td>
            <td>@Model.Email</td>
        </tr>
        <tr class="py-0">
            <td>Username</td>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <td>Birtdate</td>
            <td>@Model.Birthdate.ToShortDateString()</td>
        </tr>
        <tr>
            <td>City</td>
            <td>@Model.City</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>@Model.Country</td>
        </tr>
    </table>
