    <div class="d-flex ml-0 mr-0">
        <div class="mr-auto dnf_content p-2">
            <div style="background-color:#F5F4E1" id="HomeCarousel" class="carousel slide mb-2" data-ride="carousel">

                <ol class="carousel-indicators" style="color: #686460">
                    <li data-target="#HomeCarousel" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < Model.Carouseldata.Count(); i++)
                    {
                        <li data-target="#HomeCarousel" data-slide-to="@i"></li>
                    }
                </ol>


                <div class="carousel-inner">

                    @{string s = "";}
                    @foreach (var data in Model.Carouseldata)
                    {
                        if (data.Id == Model.Carouseldata.First().Id)
                        {
                            s = "active";
                        }
                        else { s = ""; }
                        <div class="carousel-item @s container">
                            <p class="font24">
                                <img class="float-left dnf_content" height="315" width="500" src="@data.ImgPath" alt="" />
                                "@data.Text"
                            </p>
                        </div>
                    }
                    <a class="carousel-control-prev" href="#HomeCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#HomeCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        @*<aside style="width: 300px">*@
        <div class="ml-auto dnf_content p-2">
            <h5>Latest Reviews</h5>
            @await Component.InvokeAsync("RecentReviews")
        </div>
        @*</aside>*@
    </div>

