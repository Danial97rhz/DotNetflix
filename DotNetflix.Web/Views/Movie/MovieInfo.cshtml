@model MovieInfoViewModel

<div class="container">
    <div class="row">
        <div class="col-3 col-md-4 col-sm-6">
            @if (@Model.Movie.PosterUrl == null)
            {
                <img height="428" width="300" src="https://thefilmuniverse.com/wp-content/uploads/2019/09/Poster_Not_Available2.jpg" />
            }
            else
            {
                <img height="428" width="300" src=@Model.Movie.PosterUrl />

            }

        </div>
        <div class="col-5 col-md-6 col-sm-8 text-left">
            <h1 class="text-lg">@Model.Movie.Title</h1>
            <h4 class="text-info">Original title</h4>
            <h4 class="text-dark">(@Model.Movie.OriginalTitle)</h4>

            <h3 class="text-danger">Release date: 
            @* If date is N/A? *@
            @Model.Movie.ReleaseDate
            </h3>

            <h5 class="text-info">Director: @Model.Movie.Director</h5>
            <h6 class="text-info">
                Actors: @{
                    int nrActors = Model.Movie.Actors.Count();
                    for (int i = 0; i < nrActors; i++)
                    {
                        @Model.Movie.Actors[i];
                        if (i + 1 < nrActors && nrActors != 0)
                        {<span>, </span>}
                        }
                    }</h6>
            <h7 class="text-info">Runtime minutes: @Model.Movie.RunTime </h7>
            <h7 class="text-info">
                Genres: @{
                    int nrGenres = Model.Movie.Genres.Count();
                    for (int i = 0; i < nrGenres; i++)
                    {
                        @Model.Movie.Genres[i];
                        if (i + 1 < nrGenres && nrGenres != 0)
                        {<span>, </span>}
                    }
                } </h7>
        </div>  
    </div>
    <div class="row">
        <div class="col-12">
            <h4 class="font-weight-bold" style="margin-top: 10px">Storyline</h4>
            <p>@Model.Movie.LongPlot</p>
        </div>
    </div>
    <div class="row text-right">
        <form asp-controller="Movie" asp-route-movieid="@Model.Movie.Id">
            @if (true)
            {
                <button asp-action="Wishlist" type="submit" class="btn btn-dark">Add to wishlist</button>
            }
            else
            {
                <button asp-action="RemoveFromWishlist" type="submit" class="btn btn-dark">remove from wishlist</button>
            }

            <button asp-action="RateMovie" type="submit" class="btn btn-success">Rate</button>
        </form>
    </div>
</div>
<!-- Render movie info -->
<Partial name="_MovieInfo"/>


