@using DotNetflix.Web.ViewModels
@model UserManagementViewModel

<h2>User management</h2>

@if (!Model.Users.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-bordered table-striped"
           header header-content="">
        <tr>
            <th>User Id</th>
            <th>User name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        @foreach (var m in Model.Users)
        {
            <tr>
                <td>@m.User.Id</td>
                <td>@m.User.UserName</td>
                <td>@m.User.Email</td>
                <td>@m.Role.Name</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@m.User.Id" method="post">
                        <a class="btn btn-info" asp-action="EditUser"
                           asp-route-id="@m.User.Id">Edit</a>
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');" 
                                class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<a class="btn btn-info" asp-action="AddUser">Add new user</a>
